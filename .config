# 目标平台（司络 SL-3000，MT7981B 架构）
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000=y

# 基础系统
CONFIG_PACKAGE_luci=y                         # LuCI Web 管理界面
CONFIG_PACKAGE_luci-ssl=y                     # LuCI 支持 HTTPS
CONFIG_PACKAGE_luci-app-opkg=y                # 软件包管理器界面
CONFIG_PACKAGE_luci-app-attendedsysupgrade=y # 在线升级支持

# 科学上网 / VPN / 代理
CONFIG_PACKAGE_luci-app-ssr-plus=y            # SSR Plus 插件
CONFIG_PACKAGE_luci-app-passwall2=y           # PassWall2 插件
CONFIG_PACKAGE_cloudflared=y                  # Cloudflare Tunnel 客户端

# Docker 容器支持
CONFIG_PACKAGE_dockerd=y                      # Docker 守护进程
CONFIG_PACKAGE_luci-app-dockerman=y           # Docker 图形管理界面
CONFIG_PACKAGE_luci-lib-docker=y              # Docker API 支持库
CONFIG_PACKAGE_kmod-veth=y                    # 虚拟网卡支持
CONFIG_PACKAGE_kmod-br-netfilter=y            # 桥接网络过滤支持

# 性能优化与加速
CONFIG_PACKAGE_kmod-tcp-bbr=y                 # TCP BBR 拥塞控制
CONFIG_PACKAGE_kmod-shortcut-fe=y             # 快速转发引擎
CONFIG_PACKAGE_kmod-fast-classifier=y         # 快速分类器
CONFIG_PACKAGE_kmod-nft-core=y                # nftables 核心模块
CONFIG_PACKAGE_kmod-nft-nat=y                 # nftables NAT 模块

# iStore 应用商店
CONFIG_PACKAGE_luci-app-store=y               # iStore 插件商店

# 中文语言包（仅保留必要界面翻译）
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-dockerman-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ssr-plus-zh-cn=y
CONFIG_PACKAGE_luci-i18n-passwall2-zh-cn=y
CONFIG_PACKAGE_luci-i18n-store-zh-cn=y
